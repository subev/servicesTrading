extends layout

block head
    link(rel='stylesheet', href='/stylesheets/index/index.css')

block content
  h1= title
  p Welcome to our #{ title} site!
  p Here are the latest needs by people arround the world:
  ul#lvNeeds
      each need in needs
        li
          h3.lvItem=need.title
          by
          span.comment= need.author.name
